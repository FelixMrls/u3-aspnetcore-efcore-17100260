@model u3_efcore_17100260.Models.Personaje

@{
    ViewData["Title"] = "Editar Personaje";
}

<div class="row">
    <div class="col-sm-12">
        <form asp-action="EditarRegistro" method="post">            
            <div class="col-sm-4 form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="col-sm-4 form-group">
                <label asp-for="IdAnime" class="control-label"></label>
                <select asp-for="IdAnime" class="form-control" asp-items="ViewBag.AnimeId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
            <div class="col-sm-4 form-group">
                <input type="hidden" asp-for="IdPersonaje" class="form-control disabled" />
                <span asp-validation-for="IdPersonaje" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="ListadoRegistros">Volver al listado</a>
</div>
